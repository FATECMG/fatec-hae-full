{
  "compilerOptions": {
    "lib": ["es6", "dom", "ES5", "DOM.Iterable", "ES2019.Array"],
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "types": ["reflect-metadata", "jest", "node"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src"],
  "exclude": ["coverage", "**/__tests__", "tsconfig.json", "dist"]
}
